<h2>Editar paciente: {{nome}}</h2>
<div class="card">
    <div class="card-body">
       <form action="/crud/pacientes/edit" method="post">
            <input type="hidden" name="id" value="{{paciente._id}}">
            <label for="nome">Nome:</label>
                <input type="text" id="nome" name="nome" placeholder="Informe o nome do paciente" class="form-control" value="{{paciente.nome}}">
            <label for="endereço">Endereço:</label>
                <input type="text" name="endereco" id="endereco" placeholder="Informe o endereço" class="form-control" value="{{paciente.endereco}}">
            <label for="cartao">Cartão de saúde: </label>
                <input type="number" name="cartao" id="cartao" placeholder="Informe o ID do seu catrão de saúde. 9 digitos exatos" class="form-control" value="{{paciente.cartao}}">
            <button type="submit" class="btn btn-success mt-4">Registrar paciente</button>
        </form> 
    </div>
</div>
<div class="container mt-5">
    <div class="card">
    <div class="card-body">
        <p>Id do paciente: {{paciente._id}}</p>
    </div>
</div>
</div>

